<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tl_custom"
        android:background="#5bbffd"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="萌宝乐汇"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="@dimen/txt_size_20"
                android:textColor="@android:color/white"
                android:id="@+id/toolbar_title"/>
            <ImageView
                android:id="@+id/home_search_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/searchicons"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_marginBottom="-20dp"
        android:layout_below="@+id/tl_custom"
        android:layout_above="@+id/main_bottom"
        android:layout_width="match_parent"
        android:id="@+id/content"
        android:layout_height="match_parent">

    </FrameLayout>
    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="11.5dp"
            android:orientation="vertical"
            android:background="#fff"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#77a08f90"
                ></View>
            <TextView
                android:id="@+id/main_tv_shouye"
                android:paddingTop="10dp"
                android:text="首页"
                android:textColor="@android:color/darker_gray"
                android:drawableTop="@drawable/shouye"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="11.5dp"
            android:background="#fff"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#77a08f90"
                ></View>
            <TextView
                android:id="@+id/main_tv_interactive"
                android:text="互动"
                android:textColor="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/hudong"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="80dp"
            android:background="@drawable/banner_middle"
            android:layout_height="80dp">
            <com.example.administrator.mengbaogushihui.extras.CircleImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/main_iv_play"
                app:border_color="#a08f90"
                app:border_width="1dp"
                android:layout_centerInParent="true"
                android:src="@drawable/play"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="11.5dp"
            android:background="#fff"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#77a08f90"
                ></View>
            <TextView
                android:id="@+id/main_tv_record"
                android:text="记录"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:drawableTop="@drawable/jilu"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/darker_gray"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="11.5dp"
            android:background="#fff"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#77a08f90"
                ></View>
            <TextView
                android:id="@+id/main_tv_my"
                android:text="我的"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="10dp"
                android:drawableTop="@drawable/my"
                android:paddingTop="10dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
